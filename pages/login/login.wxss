/* 登录页面样式已在app.wxss中定义了通用样式 */
/* 这里可以添加页面特定的样式 */

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #3498db, #1abc9c, #9b59b6);
  color: white;
  padding-top: 150rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 100rpx;
  text-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, #ffffff, #f1f2f6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
  width: 85%;
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.subtitle {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: white;
  font-weight: 600;
}

.tip-text {
  font-size: 28rpx;
  opacity: 0.9;
  color: white;
  line-height: 1.6;
}

.btn-primary {
  background: linear-gradient(135deg, #ffffff, #f1f2f6);
  color: #3498db;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 80%;
  margin: 20rpx 0;
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.3);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: translateY(0);
}